<main>
  <section class="page">
    <div class="centered-box">
      <h1>Sign in</h1>
      <form action="<%= session_url %>" method="post">

        <label for="user_username">User Name</label>
        <input type="text" name="user[username]" id="user_username" autocomplete="off">
        <br>

        <label for="user_password">Password</label>
        <input type="password" name="user[password]" id="user_password" autocomplete="off">
        <br>

        <input type="submit">
      </form>
    </div>
  </section>

</main>
