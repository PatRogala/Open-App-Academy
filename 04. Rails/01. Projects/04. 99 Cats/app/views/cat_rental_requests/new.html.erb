<main>
  <section class="page">
    <div class="centered-box">
      <h1>Create Rental Request</h1>
      <form action="<%= cat_rental_requests_url %>" method="post">
        <label for="cat_rental_request_cat_id">Cat</label>
        <select name="cat_rental_request[cat_id]" id="cat_rental_request_cat_id">
          <option selected disabled>-- select a cat --</option>
          <% @cats.each do |cat| %>
            <option value="<%= cat.id %>">
              <%= cat.name %>
            </option>
          <% end %>
        </select>
        <br>
        <label for="cat_rental_request_start_date">Start Date</label>
        <input type="date" name="cat_rental_request[start_date]" value="" id="cat_rental_request_start_date">
        <br>
        <label for="cat_rental_request_end_date">End Date</label>
        <input type="date" name="cat_rental_request[end_date]" value="" id="cat_rental_request_end_date">
        <br>
        <input type="submit">
      </form>
    </div>
  </section>
</main>
